---
// src/components/ServiceItem.astro
interface Props {
    title: string;
    icon?: string;
    tags: string[];
    symptoms: string[];
    relatedPosts?: {
        slug: string;
        title: string;
    }[];
}

const { title, icon = "general", tags, symptoms, relatedPosts } = Astro.props;
import ServiceIcon from "./ServiceIcon.astro";
---

<details
    class="accordion-item bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden group mb-4"
>
    <summary
        class="accordion-summary flex items-center w-full p-5 lg:p-6 justify-between cursor-pointer list-none bg-white hover:bg-gray-50 transition-colors duration-200 relative"
    >
        <!-- 左側飾條 (Active Indicator) -->
        <div
            class="absolute left-0 top-0 bottom-0 w-1.5 bg-primary opacity-0 group-open:opacity-100 transition-opacity duration-300"
        >
        </div>

        <div class="flex items-center gap-4 md:gap-6 pl-2">
            <!-- Icon Box -->
            <div
                class="w-12 h-12 md:w-14 md:h-14 bg-blue-50 text-primary rounded-full flex items-center justify-center flex-shrink-0 group-open:bg-primary group-open:text-white transition-colors duration-300 shadow-sm"
            >
                <ServiceIcon name={icon} class="w-6 h-6 md:w-7 md:h-7" />
            </div>

            <h3
                class="text-xl md:text-2xl font-bold text-gray-800 group-hover:text-primary transition-colors duration-200"
            >
                {title}
            </h3>
        </div>

        <!-- Chevron Icon -->
        <div
            class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 text-gray-500 group-open:bg-primary/10 group-open:text-primary transition-all duration-300 transform group-open:rotate-180"
        >
            <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"></path>
            </svg>
        </div>
    </summary>

    <div
        class="accordion-content bg-white border-t border-gray-100 px-6 py-8 md:pl-24 md:pr-10"
    >
        <!-- 1. Tags (Pills) -->
        <div class="flex flex-wrap gap-2 mb-8">
            {
                tags.map((tag) => (
                    <span class="inline-flex items-center px-3 py-1 bg-blue-50 text-primary-dark text-sm font-medium rounded-full border border-blue-100">
                        #{tag}
                    </span>
                ))
            }
        </div>

        <div class="grid md:grid-cols-2 gap-8 md:gap-12">
            <!-- 2. Symptoms List -->
            <div>
                <h4
                    class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2"
                >
                    <span class="w-1 h-5 bg-primary rounded-full"></span>
                    常見困擾
                </h4>
                <ul class="space-y-3">
                    {
                        symptoms.map((symptom) => (
                            <li class="flex items-start gap-3 text-gray-600">
                                <span class="mt-1 w-5 h-5 flex items-center justify-center bg-green-100 text-green-600 rounded-full flex-shrink-0 text-xs font-bold">
                                    ✓
                                </span>
                                <span class="leading-relaxed">{symptom}</span>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- 3. Related Posts -->
            {
                relatedPosts && relatedPosts.length > 0 && (
                    <div>
                        <h4 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                            <span class="w-1 h-5 bg-primary rounded-full" />
                            延伸閱讀
                        </h4>
                        <div class="space-y-3">
                            {relatedPosts.map((post) => (
                                <a
                                    href={post.slug}
                                    class="group block p-3 rounded-lg hover:bg-gray-50 border border-transparent hover:border-gray-100 transition-all duration-200"
                                >
                                    <h5 class="text-base font-bold text-primary group-hover:text-primary-dark mb-1 flex items-center justify-between">
                                        {post.title}
                                        <span class="opacity-0 group-hover:opacity-100 transform translate-x-[-10px] group-hover:translate-x-0 transition-all duration-300">
                                            →
                                        </span>
                                    </h5>
                                    <p class="text-sm text-gray-400">
                                        閱讀文章
                                    </p>
                                </a>
                            ))}
                        </div>
                    </div>
                )
            }
        </div>
    </div>
</details>

<style>
    /* 隱藏原生 details 標記 */
    .accordion-summary {
        list-style: none;
    }
    .accordion-summary::-webkit-details-marker {
        display: none;
    }

    /* 簡易滑動動畫 (利用 grid-template-rows) - Optional, need JS usually, but simple styling here is safer */
    /* Keeping it simple without JS animations for now to avoid complexity */
</style>
