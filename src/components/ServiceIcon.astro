---
// src/components/ServiceIcon.astro
interface Props {
  name: string;
  class?: string;
}

const { name, class: className } = Astro.props;

// 定義圖示路徑 (Lucide Icons)
const icons = {
  // 頭頸 -> Smile (代表顏面、頭部)
  head: `<circle cx="12" cy="12" r="10"/><path d="M8 14s1.5 2 4 2 4-2 4-2"/><line x1="9" x2="9.01" y1="9" y2="9"/><line x1="15" x2="15.01" y1="9" y2="9"/>`,

  // 上肢 -> Dumbbell (代表手部運動、肌力)
  upper: `<path d="m6.5 6.5 11 11"/><path d="m21 21-1-1"/><path d="m3 3 1 1"/><path d="m18 22 4-4"/><path d="m2 6 4-4"/><path d="m3 10 7-7"/><path d="m14 21 7-7"/>`,

  // 下肢 -> Footprints (代表足部、行走)
  lower: `<path d="M4 16v-2.38C4 11.5 2.97 10.5 3 8c.03-2.72 1.49-6 4.5-6C9.37 2 11 3.8 11 8c0 1.25-1 3.5-1.5 5 2.38-1.5 3.5-1 3.5-1l3.5 1S22 13 22 17c0 4.42-3.58 8-8 8-5.52 0-10-3.58-10-9z"/><path d="M20 20v-2.38c0-2.12 1.03-3.12 1-5.62-.03-2.72-1.49-6-4.5-6C14.63 6 13 7.8 13 12c0 1.25 1 3.5 1.5 5-2.38-1.5-3.5-1-3.5-1l-3.5 1S10 17 10 21c0 4.42 3.58 8 8 8 5.52 0 10-3.58 10-9z"/>`,

  // 脊椎 -> Layers (代表脊椎節段)
  spine: `<polygon points="12 2 2 7 12 12 22 7 12 2"/><polyline points="2 17 12 22 22 17"/><polyline points="2 12 12 17 22 12"/>`,

  // 全身 -> Activity (代表整體機能、神經)
  general: `<path d="M22 12h-4l-3 9L9 3l-3 9H2"/>`,
};

const path = icons[name] || icons.general; // 預設使用 general
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width="24"
  height="24"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  set:html={path}
/>
