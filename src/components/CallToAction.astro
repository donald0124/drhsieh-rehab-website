---
// src/components/CallToAction.astro
// 使用 Zero-Runtime SVG 方案，保證極速載入

interface Props {
    title?: string;
    subtitle?: string;
}

// 這裡的預設文字保留為通用版，但下方的 HTML 結構我們針對您的需求進行了「硬改寫」，
// 以確保那段重要的掛號須知一定會出現。
const {
    title = "疼痛困擾許久，卻找不到原因？",
    // 注意：下方的 HTML 已經將文案寫死，以符合您的最新需求
} = Astro.props;
---

<section
    class="mt-0 bg-primary-light/50 rounded-2xl border border-blue-100 overflow-hidden shadow-sm"
>
    <div class="pt-0 pb-6 md:pt-0 md:pb-8">
        <div class="text-center mb-8">
            <h3 class="text-3xl md:text-4xl font-bold text-heading mb-4 mt-0">
                {title}
            </h3>
            <div
                class="text-gray-700 max-w-3xl mx-auto text-lg leading-relaxed space-y-2"
            >
                <p>
                    <span class="font-bold text-primary-dark">謝明福院長</span
                    >堅持親自為每位患者評估與治療。
                </p>
                <p class="text-base text-gray-900 w-4/5 max-w-xl mx-auto">
                    <strong>精準的疼痛治療</strong
                    >需高度的專業解剖學知識與臨床經驗，為確保每位患者皆能獲得院長完整的親診時間，並維護現場患者的就醫權益，請參考以下就醫須知：
                </p>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
            <div
                class="bg-white p-6 rounded-xl border border-blue-100 flex flex-col items-center text-center shadow-sm hover:shadow-md transition-shadow relative overflow-hidden"
            >
                <div class="absolute top-0 left-0 w-full h-1 bg-red-400"></div>

                <div
                    class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center text-primary mb-4 mt-2"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="28"
                        height="28"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><rect width="8" height="4" x="8" y="2" rx="1" ry="1"
                        ></rect><path
                            d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"
                        ></path><path d="M12 11h4"></path><path d="M12 16h4"
                        ></path><path d="M8 11h.01"></path><path d="M8 16h.01"
                        ></path></svg
                    >
                </div>

                <h4 class="text-xl font-bold text-heading mb-3">
                    門診資訊與掛號須知
                </h4>

                <div
                    class="text-gray-800 text-sm mb-6 flex-grow space-y-3 text-left w-full px-2"
                >
                    <p class="flex items-start gap-2">
                        <span
                            class="text-red-500 font-bold text-lg leading-none"
                            >×</span
                        >
                        <span
                            >本診所<strong>不提供</strong
                            >任何形式的預約掛號。</span
                        >
                    </p>
                    <p class="flex items-start gap-2">
                        <span
                            class="text-green-600 font-bold text-lg leading-none"
                            >✓</span
                        >
                        <span
                            >所有門診服務（包含初診與複診），皆請您於門診時間內，直接至診所<strong
                                >「現場掛號」</strong
                            >。</span
                        >
                    </p>
                </div>

                <a
                    href="/#patient-info"
                    class="inline-flex items-center gap-2 bg-primary text-white px-6 py-3 rounded-full font-bold hover:bg-primary-dark transition-colors w-full justify-center md:w-auto shadow-sm"
                >
                    立即查看醫師門診時間
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"
                        ></path></svg
                    >
                </a>
            </div>

            <div
                class="bg-white p-6 rounded-xl border border-blue-100 flex flex-col items-center text-center shadow-sm hover:shadow-md transition-shadow"
            >
                <div
                    class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center text-orange-600 mb-4 mt-2"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="28"
                        height="28"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path
                            d="M4.8 2.3A.3.3 0 1 0 5 2H4a2 2 0 0 0-2 2v5a6 6 0 0 0 6 6v0a6 6 0 0 0 6-6V4a2 2 0 0 0-2-2h-1a.2.2 0 1 0 .3.3"
                        ></path><path
                            d="M8 15v1a6 6 0 0 0 6 6v0a6 6 0 0 0 6-6v-4"
                        ></path><circle cx="20" cy="10" r="2"></circle></svg
                    >
                </div>

                <h4 class="text-xl font-bold text-heading mb-3">
                    頑固疼痛進階評估
                </h4>

                <p
                    class="text-gray-800 text-sm mb-6 flex-grow leading-relaxed px-2"
                >
                    若您有久治不癒的慢性疼痛或肌筋膜炎問題，歡迎您親至診所，由院長評估是否適合「針極肌肉內電刺激」或「直線偏光」等進階治療。
                </p>

                <div
                    class="flex flex-col sm:flex-row gap-3 w-full justify-center"
                >
                    <a
                        href="/blog/superlizer/"
                        class="inline-flex items-center justify-center gap-2 px-5 py-2.5 rounded-full text-primary border border-primary hover:bg-blue-50 transition-colors text-sm font-semibold"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="lucide lucide-lightbulb-icon lucide-lightbulb"
                            ><path
                                d="M15 14c.2-1 .7-1.7 1.5-2.5 1-.9 1.5-2.2 1.5-3.5A6 6 0 0 0 6 8c0 1 .2 2.2 1.5 3.5.7.7 1.3 1.5 1.5 2.5"
                            ></path><path d="M9 18h6"></path><path d="M10 22h4"
                            ></path></svg
                        >

                        直線偏極光治療
                    </a>
                    <a
                        href="/blog/neims/"
                        class="inline-flex items-center justify-center gap-2 px-5 py-2.5 rounded-full text-primary border border-primary hover:bg-blue-50 transition-colors text-sm font-semibold"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><polygon
                                points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"
                            ></polygon></svg
                        >
                        針極肌肉內電刺激
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="h-2 bg-gradient-to-r from-primary to-blue-400 w-full"></div>
</section>
