import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

// 1. Get all posts and sort
const allPosts = (await getCollection('blog')).sort(
    (a, b) => {
        // Sort by Featured first (true > false)
        if (a.data.featured !== b.data.featured) {
            return a.data.featured ? -1 : 1;
        }
        // Then by Date (Updated > Published)
        const dateB = (b.data.updatedDate ?? b.data.lastMod ?? b.data.pubDate).valueOf();
        const dateA = (a.data.updatedDate ?? a.data.lastMod ?? a.data.pubDate).valueOf();
        return dateB - dateA;
    }
);

// 2. Filter by Tags (Not Category)
const healthPosts = allPosts.filter(post => post.data.tags?.includes('衛教文章'));
const reportPosts = allPosts.filter(post => post.data.tags?.includes('媒體報導'));
const directorPosts = allPosts.filter(post => post.data.tags?.includes('院長經驗談'));

// 3. Other posts (none of the above tags)
const otherPosts = allPosts.filter(post => 
    !post.data.tags?.some(t => ['衛教文章', '媒體報導', '院長經驗談'].includes(t))
);

// Helper function for categorization
const getPostsBySection = (posts: CollectionEntry<'blog'>[]) => {
    if (posts.length === 0) return { featured: null, list: [] };
    // If there is a manually featured post in this group, pick it. 
    // Since we sorted allPosts by featured first, posts[0] SHOULD be the featured one if it exists.
    return {
        featured: posts[0],
        list: posts.slice(1, 5) // Show next 4
    };
};

const healthSection = getPostsBySection(healthPosts);
const reportSection = getPostsBySection(reportPosts);
const directorSection = getPostsBySection(directorPosts);
const otherSection = getPostsBySection(otherPosts);

// Date helper
const getDisplayDate = (post: CollectionEntry<'blog'>) => {
    return post.data.updatedDate ?? post.data.lastMod ?? post.data.pubDate;
};
const hasBeenUpdated = (post: CollectionEntry<'blog'>) => {
    return (post.data.updatedDate || post.data.lastMod) ? true : false;
};
